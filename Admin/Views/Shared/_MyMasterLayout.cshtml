    <script>
        function RefreshData() {
            swal.queue([{
                title: 'Refresh Website Data',
                confirmButtonText: 'Refresh',
                text: 'Click to refresh website data',
                showLoaderOnConfirm: true,
                preConfirm: function preConfirm() {
                    return fetch('/Jobs/RefreshData').then(function (response) {
                        //debugger;
                        return response.json();
                    }).then(function (data) {
                        //debugger;
                        data = JSON.parse(data);
                        return swal.insertQueueStep('Data has been refreshed in ' + data.ElapsedMilliseconds+ ' milliseconds');
                    }).catch(function () {
                        return swal.insertQueueStep({ type: 'error', title: 'Unable to refresh data' });
                    });
                }
            }]);
        }
    </script>

