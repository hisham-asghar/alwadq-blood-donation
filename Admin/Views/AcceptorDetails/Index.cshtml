@model IEnumerable<LayerDb.AcceptorDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CardLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Donated By
        </th>
        <th>
            Accepted By
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BleedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Donar.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Donar1.FirstName)
        </td>
        <td>
            @item.BleedDate.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AcceptorId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AcceptorId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AcceptorId })
        </td>
    </tr>
}

</table>
